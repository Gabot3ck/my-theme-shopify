<div class="gallery">
    {% for block in section.blocks %}
        {{ block.settings.image }}
    {% endfor %}
</div>

{% schema %}
{
    "name": "Galería",
    "settings": [
    ],
    "blocks": [
        {
        "name": "Nombre de Imagen",
        "type": "image",
        "settings": [
            {
            "type": "image_picker",
            "id": "image",
            "label": "Imagen de galería"
            }
        ]
        }
    ]
}
{% endschema %}
